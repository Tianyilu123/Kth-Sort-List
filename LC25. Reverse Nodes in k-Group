
class Solution {
    public ListNode reverseKGroup(ListNode head, int k) {
        ListNode tHead = new ListNode(0);
        tHead.next = head;
        ListNode prev = tHead, cur = head;
        while(true) {
            int count = 0;
            ListNode p = cur;
            while(p != null && count++ < k) {
                p = p.next;
            }
            if(count < k) {
                break;
            }
            count = 1;
            while(count++ < k) {
                ListNode next = cur.next;
                cur.next = next.next;
                next.next = prev.next;
                prev.next = next;
            }
            prev = cur;
            cur = cur.next;
        }
        return tHead.next;
    }
}

//O(n), O(n)
